<div class="container mt-3">
  <div class="row m-auto">
    <div class=" col m-auto">
      <div class="row text-center h-100">
        <div class="col-3"></div>
        <div class="col-6">
          <h1>新增已訂場需結帳</h1>
        </div>
        <div class="col-3">
          <button class="btn btn-secondary mb-2 text-nowrap" style="width: 8vw; min-width: 5rem;"
            onclick="history.back()">回上頁</button>
        </div>
      </div>
    </div>
  </div>
  <!-- 管理員說明字段 -->
  <div class="row m-auto text-center">
    <div class="col m-auto">
      <p>admin description area</p>
    </div>
  </div>
  <!-- 表單 -->
  <div class="row text-center mt-3">
    <div class="col-10 col-md-6 m-auto">
      <form action="/reservations/booking" method="POST">
        <!-- 日期 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="date">日期:</span>
          <input type="date" name="date" class="form-control" aria-label="date" aria-describedby="date">
        </div>
        <!-- 球場 下拉式選單 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="course">球場</span>
          <select class="form-select" aria-label="course">
            <option selected>請選擇球場</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
            <option value="other">其他</option>
          </select>
        </div>
        <!-- 開球時間 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">開球時間</span>
          <input type="time" name="gametime" class="form-control" aria-label="gametime">
        </div>
        <!-- 球隊 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="team">球隊</span>
          <input type="text" name="team" class="form-control" aria-label="team" aria-describedby="team">
        </div>
        <!-- 名單 -->
        <div class="input-group mb-3">
          <span class="input-group-text">名單</span>
          <textarea class="form-control" name="checkUsers" aria-label="list" style="height: 13vh;"></textarea>
        </div>
        <!-- 組數 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="group">組數</span>
          <input type="text" name="group" class="form-control" aria-label="group" aria-describedby="group">
        </div>
        <!-- 備註 -->
        <div class="input-group mb-3">
          <span class="input-group-text">備註</span>
          <textarea class="form-control" name="description" aria-label="text" style="height: 13vh;"></textarea>
        </div>

        <div class="submit-back d-flex justify-content-end mb-3">
          <button type="submit" class="btn btn-primary text-nowrap" style="width: 8vw; min-width: 5rem;">新增</button>

          <button type="button" class="ms-3 btn btn-secondary text-nowrap" style="width: 8vw; min-width: 5rem;"
            onclick="history.back()">關閉</button>
        </div>
      </form>
    </div>
  </div>
</div>