<div class="container mt-3">
  <div class="row flex-row-reverse">
    <div class="col-3 col-md-1">
      <div>
        <a href="/logout" class="btn btn-primary d-flex align-items-center justify-content-center"
          style="white-space:nowrap">登出</a>
      </div>
    </div>
  </div>
  <div class="row text-center mt-3">
    <div class="col-10 col-md-6 m-auto">
      <div class="card card-body border-dark m-auto" style="height: 40vh;">
        <h1 class="mb-5 mb-md-2 " style="font-size: 3rem;">
          <%= name %>
        </h1>
        <div class="mt-5 d-flex justify-content-around">
          <h4><i class="bi bi-coin"></i>餘額: <%= balance %>
          </h4>
          <h4><i class="bi bi-record-circle-fill"></i>點數: <%= point %>
          </h4>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-5 px-md-5">
    <div class="col-5 col-md-3 m-auto me-md-4">
      <button class="btn btn-primary d-flex align-items-center justify-content-center" style="white-space:nowrap"
        onclick="history.back()">上一頁</button>
    </div>
    <div class="col-5 col-md-3 m-auto  ms-md-4">
      <a href="/members" class="btn btn-secondary d-flex align-items-center justify-content-center" style="height:6rem">
        <h4>會員專區</h4>
      </a>
    </div>
  </div>
</div>