<div class="container mt-3">
  <div class="row m-auto">
    <div class=" col m-auto">
      <div class="row text-center h-100">
        <div class="col-3 pt-5">
          <div class="item d-flex justify-content-center align-items-center">
            <h5>管理員</h5>
          </div>
        </div>
        <div class="col-6 pt-3">
          <h2>會員log紀錄</h2>
        </div>
        <div class="col-3">
          <div class="item d-flex flex-column">
            <button class="btn btn-secondary mb-2 text-nowrap" style="width: 8vw; min-width: 5rem;"
              onclick="history.back()">回上頁</button>
            <button class="btn btn-success" style="width: 8vw;min-width: 5rem;">匯出Excel</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <form action="/admin/booking" method="GET">
    <div class="row g-4 mt-1">
      <!-- 會員編號 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="member_id" class="form-label">會員編號</label>
        <input type="text" class="form-control" id="member_id">
      </div>
      <!-- 姓名 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="name" class="form-label">姓名</label>
        <input type="text" class="form-control" id="name">
      </div>
      <!-- 日期 始 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="date_start" class="form-label">從</label>
        <input type="date" class="form-control" id="date_start">
      </div>
      <!-- 日期 末 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="date_end" class="form-label">至</label>
        <input type="date" class="form-control" id="date_end">
      </div>
      <!-- 球場 下拉式-->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="course" class="form-label">球場</label>
        <select class="form-select" aria-label="course">
          <option selected>Open this select menu</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
      </div>
      <!-- 球隊 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="team" class="form-label">球隊</label>
        <input type="text" class="form-control" id="team">
      </div>
      <!-- 聯絡人 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="contact_person" class="form-label">聯絡人</label>
        <input type="text" class="form-control" id="contact_person">
      </div>
      <!-- 訂單狀態 下拉式 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="contact_person" class="form-label">訂單狀態</label>
        <select class="form-select" aria-label="state">
          <option selected>Open this select menu</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
      </div>
      <!-- 結帳狀態 下拉式 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="contact_person" class="form-label">結帳狀態</label>
        <select class="form-select" aria-label="state">
          <option selected>Open this select menu</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
      </div>
      <!-- 最後修改時間 始 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="date_start" class="form-label">最後修改時間 從</label>
        <input type="date" class="form-control" id="date_start">
      </div>
      <!-- 最後修改時間 末 -->
      <div class="col-6 col-sm-4 col-md-3">
        <label for="date_end" class="form-label">至</label>
        <input type="date" class="form-control" id="date_end">
      </div>
    </div>

    <button type="submit" class="d-grid btn btn-primary mt-3 m-auto">
      <h5>log查詢</h5>
    </button>
  </form>

  <table id="myTable" class="display cell-border responsive nowrap" style="width: 100%;">
    <thead>
      <tr>
        <th>會員編號</th>
        <th>姓名</th>
        <th>日期</th>
        <th>球場</th>
        <th>開球時間_起</th>
        <th>開球時間_迄</th>
        <th>球隊</th>
        <th>組數</th>
        <th>訂場名單</th>
        <th>聯絡人</th>
        <th>聯絡人電話</th>
        <th>結帳名單</th>
        <th>開球時間</th>
        <th>訂場狀態</th>
        <th>結帳狀態</th>
        <th>最後修改時間</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function () {
    $('#myTable').DataTable({
      // 中文化
      language: {
        url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/zh-HANT.json',
      },
      // 分頁器
      paging: false,
      // 滾軸頁面
      scrollY: 400,
      // 關鍵字搜尋
      searching: false,
      // 排序
      ordering: false
    });
  });
</script>
</div>