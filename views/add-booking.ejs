<div class="container mt-3">
  <div class="row flex-row-reverse">
    <div class="col-3 col-md-1">
      <button class="btn btn-secondary d-flex align-items-center justify-content-center" style="white-space:nowrap"
        onclick="history.back()">回上頁</button>
    </div>
  </div>

  <div class="row text-center">
    <div class="col-10 col-md-6 m-auto">
      <h1 class="mb-3">協助訂場</h1>
      <form action="/reservations/booking" method="POST">
        <!-- 日期 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="date">日期:</span>
          <input type="date" class="form-control" aria-label="date" aria-describedby="date">
        </div>
        <!-- 球場 下拉式選單 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="course">球場</span>
          <select class="form-select" aria-label="course">
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <!-- 開球時間 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">開球時間</span>
          <input type="time" class="form-control" aria-label="game_begin">
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">結束時間</span>
          <input type="time" class="form-control" aria-label="game_begin">
        </div>

        <!-- 球隊 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="team">球隊</span>
          <input type="text" class="form-control" aria-label="team" aria-describedby="team">
        </div>
        <!-- 組數 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="group">組數</span>
          <input type="text" class="form-control" aria-label="group" aria-describedby="group">
        </div>
        <!-- 名單 -->
        <div class="input-group mb-3">
          <span class="input-group-text">名單</span>
          <textarea class="form-control" aria-label="list" style="height: 13vh;"></textarea>
        </div>
        <!-- 聯絡人 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="contact_person">聯絡人</span>
          <input type="text" class="form-control" aria-label="contact_person" aria-describedby="contact_person">
        </div>
        <!-- 聯絡人電話 -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="phone">聯絡人電話</span>
          <input type="phone" class="form-control" aria-label="phone" aria-describedby="phone">
        </div>
      </form>
    </div>
  </div>
</div>