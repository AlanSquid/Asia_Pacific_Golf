<div class="container mt-3">
  <div class="row">
    <div class="col col-md-10">
      <div class="d-flex flex-row-reverse">
        <button type="submit" class="btn btn-primary" style="width: 5rem" onclick="history.back()">上一頁</button>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col m-auto">
      <div class="card card-body mt-5 m-auto" style="max-width: 36rem;">
        <div class="row mt-5">
          <div class="col-6 m-auto">
            <h2 class="text-nowrap"><i class="bi bi-sun me-2 fg-1" style="color: orange;"></i>點數: <%= balance %>
            </h2>
          </div>
        </div>
        <div class="row mt-5 mb-5">
          <div class="col-6 m-auto">
            <h2 class="text-nowrap"><i class="bi bi-sun me-2" style="color: orange;"></i>贈球: <%= gift %>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
